<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp">

        <!-- GSM Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GSM"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <!-- Network -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Network"
                android:textSize="13sp"
                android:textColor="@color/text_label" />
            <TextView
                android:id="@+id/tvGsmNetwork"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="—"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Network Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="13sp"
                android:textColor="@color/text_label" />
            <TextView
                android:id="@+id/tvNetworkType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="—"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Signal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Signal"
                android:textSize="13sp"
                android:textColor="@color/text_label" />
            <TextView
                android:id="@+id/tvGsmSignal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="—"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Cell ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Cell ID"
                android:textSize="13sp"
                android:textColor="@color/text_label" />
            <TextView
                android:id="@+id/tvCellId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="—"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- IMEI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="IMEI"
                android:textSize="13sp"
                android:textColor="@color/text_label" />
            <TextView
                android:id="@+id/tvImei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="—"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Phone Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="13sp"
                android:textColor="@color/text_label" />
            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="—"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_card"
            android:layout_marginVertical="8dp" />

        <!-- WiFi Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WiFi"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <!-- WiFi Network -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Network"
                android:textSize="13sp"
                android:textColor="@color/text_label" />
            <TextView
                android:id="@+id/tvWifiNetwork"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="—"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- WiFi Band -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Band"
                android:textSize="13sp"
                android:textColor="@color/text_label" />
            <TextView
                android:id="@+id/tvWifiType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="—"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- WiFi Signal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Signal"
                android:textSize="13sp"
                android:textColor="@color/text_label" />
            <TextView
                android:id="@+id/tvWifiSignal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="—"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- WiFi IP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Local IP"
                android:textSize="13sp"
                android:textColor="@color/text_label" />
            <TextView
                android:id="@+id/tvWifiIp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="—"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_card"
            android:layout_marginVertical="8dp" />

        <!-- IP Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Internet"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <!-- Public IP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Public IP"
                android:textSize="13sp"
                android:textColor="@color/text_label" />
            <TextView
                android:id="@+id/tvPublicIp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="detecting…"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_card"
            android:layout_marginVertical="8dp" />

        <!-- Check Support Button -->
        <Button
            android:id="@+id/btnCheckSupport"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Check Gateway Support"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/primary"
            android:layout_marginTop="4dp" />

        <!-- Check Results Container (populated dynamically) -->
        <LinearLayout
            android:id="@+id/checkResultsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
